{
  "manifest_version": 3,
  "name": "Homebrew DnD - DM Quick Reference",
  "short_name": "Homebrew DnD",
  "version": "1.0.0",
  "description": "Quick reference tool for D&D Dungeon Masters. Access equipment prices, d100 tables, and more without leaving your browser.",
  "author": "homebrewdnd.com",
  "homepage_url": "https://homebrewdnd.com",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Homebrew DnD Quick Reference",
    "default_popup": "popup/popup.html"
  },
  
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  
  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://toddprout.github.io/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Open quick reference popup"
    },
    "open_side_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Open full reference panel"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["data/*.json", "data/npc/*.json", "icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}